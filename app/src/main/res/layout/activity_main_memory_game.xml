<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMemoryGame">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="0dp"
        android:background="@drawable/app_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <GridView
        android:listSelector="#00000000"
        android:background="@color/transparent"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvResetBtn"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/gridView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_rounded_btn"
        android:text="Reset"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="32dp"/>
    <Chronometer
        android:id="@+id/cmClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridView"
        android:background="@drawable/shape_rounded_box"
        android:layout_margin="24dp"
        android:gravity="center"
        android:textSize="32dp"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>