<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rounded_white">
    <TextView
        android:id="@+id/TV02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agreement to our Policy is required to play the game."
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/canava_regular"
        android:textSize="20dp"
        android:padding="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:clickable="true"
        android:id="@+id/tvOkBtnPolicyDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Okay"
        android:background="@drawable/shape_rounded_btn"
        app:layout_constraintTop_toBottomOf="@id/TV02"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_margin="24dp"
        android:padding="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>