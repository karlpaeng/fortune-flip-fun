<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="0dp"
        android:background="@drawable/app_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/ivMenuAppLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvPlayBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_transpa"/>
    <TextView
        android:id="@+id/tvPlayBtn"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvHowToPlay"
        app:layout_constraintTop_toBottomOf="@id/ivMenuAppLogo"
        android:background="@drawable/shape_rounded_btn"
        android:text="Play"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/tvHowToPlay"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvExitBtn"
        app:layout_constraintTop_toBottomOf="@id/tvPlayBtn"
        android:background="@drawable/shape_rounded_btn"
        android:text="How to play"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/tvExitBtn"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/CL02"
        app:layout_constraintTop_toBottomOf="@id/tvHowToPlay"
        android:background="@drawable/shape_rounded_btn"
        android:text="Exit"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="24dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/CL02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExitBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <CheckBox
            android:id="@+id/cbIAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree with the"
            android:checked="true"
            android:fontFamily="@font/canava_regular"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:theme="@style/cbTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvPolicyBtn"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:paddingVertical="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbIAgree"
            android:background="@drawable/shape_rounded_btn"
            android:text="Policy"
            android:gravity="center"
            android:fontFamily="@font/canava_regular"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>