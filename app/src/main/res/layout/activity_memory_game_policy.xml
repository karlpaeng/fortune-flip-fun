<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MemoryGamePolicyActivity">

    <TextView
        android:id="@+id/tvAcceptPolicyBtn"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_rounded_btn"
        android:text="Done"
        android:gravity="center"
        android:fontFamily="@font/canava_regular"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <WebView
        android:id="@+id/wvPolicyMemoGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvAcceptPolicyBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>